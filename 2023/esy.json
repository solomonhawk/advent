{
  "name": "aoc-2023",
  "dependencies": {
    "ocaml": "5.1.4",
    "@opam/dune": ">= 3.8.0",
    "@opam/reason": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@opam/ocamlformat": "*",
    "@opam/ocaml-lsp-server": "*",
    "@opam/ppx_inline_test": "*"
  },
  "esy": {
